{
    "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "lib": ["esnext", "dom"],
      "skipLibCheck": true,
      "outDir": "dist",
      "declarationDir": "dist",
      "declaration": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
      }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/shared/types/Col.ts"],
    "references": [{ "path": "./tsconfig.node.json" }]
  }
  